<header class="main-head">
  <div class="images-header">
    <h1>EventDay</h1>
    <p>It's time to find people who share the same passion.</p>
  </div>
</header>
<main>
  <article>
    <!-- 3D Slideshow Section -->
    <section id="slideshow">
      <p id="quote">It's time to find people who share the same passion</p>
      <div class="entire-content">
        <div class="content-carrousel">
          {{!-- Create a dynamique carousel sorted by created date --}}
          {{#each carouselImg}}
          <figure class="shadow">
            <a href="/allEvents"><img src={{this.image}}></a>
          </figure>
          {{/each}}
          </figure>
        </div>
      </div>
      <a href="/allEvents">Discover all the events !</a>
    </section>

    <section id="section1">
      <div id="big-box">
        <div class="box">
          <img src="https://img.icons8.com/officel/80/000000/add-user-male.png" alt="music icon" />
          <h2>Sign up</h2>
          <p></p>
        </div>
        <div class="box">
          <img src="https://img.icons8.com/plasticine/100/000000/planner.png" alt="high quality icon" />
          <h2>Create an event</h2>
          <p></p>
        </div>
      </div>
    </section>
  </article>
</main>